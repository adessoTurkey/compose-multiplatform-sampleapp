<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#19003dff" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="1dp"
                android:color="#66003dff" />
        </shape>
    </item>
    <item>
        <inset android:inset="40dp">
            <shape android:shape="oval">
                <solid android:color="#003dff" />
                <size
                    android:width="30dp"
                    android:height="30dp" />
                <stroke
                    android:width="3dp"
                    android:color="#ffffff" />
            </shape>
        </inset>
    </item>
</layer-list>